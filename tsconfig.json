{
  "compilerOptions": {
    "target": "es2018" ,
    "module": "commonjs" ,
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": ["**/*.test.*", "**/__mocks__/*", "**/__tests__/*"]
}
